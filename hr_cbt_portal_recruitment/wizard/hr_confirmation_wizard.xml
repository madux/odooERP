<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_confirm_wizard_form_view" model="ir.ui.view">
            <field name="name">hr.confirm.wizard.view.form</field>
            <field name="model">hr.confirm.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirm">
                    <group>
                        <field name="hr_comment" required="1"/>
                   </group>
                    <footer>
                        <button type="object" name="confirm"
                            string="Confirm" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record> 

    </data>
</odoo>
